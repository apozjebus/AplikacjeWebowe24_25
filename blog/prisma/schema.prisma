generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wpis {
  id        Int      @id @default(autoincrement())
  tytul     String
  tresc     String
  data      DateTime
  autor     String
  kategoriaId Int
  kategoria Kategorie @relation(fields: [kategoriaId], references: [id])
  zdjecie   String
  Komentarz Komentarz[]
}

model Kategorie {
  id    Int     @id @default(autoincrement())
  nazwa String
  Wpis  Wpis[]
}

model Komentarz {
  id        Int      @id @default(autoincrement())
  tresc     String
  data      DateTime
  autor     String
  wpisId    Int
  Wpis      Wpis     @relation(fields: [wpisId], references: [id])
}